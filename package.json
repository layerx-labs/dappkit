{
  "name": "@taikai/dappkit",
  "version": "2.3.1",
  "description": "Web3 Decentralized Application Kit",
  "main": "dist/src/index.js",
  "module": "dist/src/index.js",
  "engines": {
    "node": "^14 || ^16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/taikai/dappkit.git"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "clean-contracts": "node tools/contract-json-cleaner.mjs artifacts/contracts/",
    "generate-typings": "node tools/generate-abi-typings.mjs",
    "list-contract-size": "node tools/contract-size.mjs artifacts/contracts/",
    "fix-paths": "tscpaths -p ./tsconfig.json -s ./ -o ./dist",
    "prepublishOnly": "npm run build",
    "mocha-mug": "mocha --bail --timeout 60000 --exit --require ts-node/register --require tsconfig-paths/register",
    "test": "npm run mocha-mug -- 'test/**/*.spec.{ts,tsx}' --pretty",
    "compile-contracts": "npx hardhat compile && npm run clean-contracts && npm run list-contract-size",
    "compile-ts": "tsc -p ./tsconfig.json && npm run fix-paths",
    "build": "npm run compile-contracts && npm run generate-typings && npm run compile-ts ",
    "docs": "typedoc",
    "hardhat:start": "npx hardhat node",
    "test-ci": "npm run hardhat:start >/dev/null & npm run test",
    "eslint": "eslint --ignore-path .eslintignore --ext .ts ./src",
    "lint": "npm run eslint -- --quiet",
    "lint-fix": "npm run eslint -- --quiet --fix",
    "tsc": "tsc",
    "tscpaths": "tscpaths",
    "dk-transpile": "dlt -j dk-config.json"
  },
  "dependencies": {
    "bignumber.js": "^9.0.2",
    "date-fns": "^2.27.0",
    "ipfs-http-client": "^50.1.2",
    "web3": "^4.1.1",
    "web3-eth": "^4.1.0",
    "web3-utils": "^4.0.4"
  },
  "devDependencies": {
    "bignumber.js": "^9.1.1",
    "@openzeppelin/contracts": "^3.4.2",
    "@taikai/dappkit-launchpad": "^0.0.19",
    "@types/chai": "^4.3.0",
    "@types/chai-like": "^1.1.1",
    "@types/chai-things": "^0.0.35",
    "@types/mocha": "^9.0.0",
    "@types/yargs": "^17.0.7",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "@uniswap/v3-core": "^1.0.1",
    "@uniswap/v3-periphery": "^1.1.1",
    "chai": "^4.3.4",
    "chai-like": "^1.1.1",
    "chai-things": "^0.2.0",
    "dotenv": "^8.2.0",
    "eslint": "^8.8.0",
    "find": "^0.3.0",
    "ganache": "^7.0.0-beta.2",
    "ganache-time-traveler": "^1.0.5",
    "hardhat": "^2.17.1",
    "mocha": "^9.1.3",
    "mocha-multi-reporters": "^1.5.1",
    "ts-node": "^10.4.0",
    "tsc-alias": "^1.5.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typedoc": "^0.22.10",
    "typescript": "4.5.3"
  },
  "author": "Mosh Mage <moshmage@gmail.com> (https://moshmage.gitlab.io)",
  "contributors": [
    {
      "name": "Helder Vasconcelos",
      "email": "helder@taikai.network"
    },
    {
      "name": "Vitor Hugo",
      "email": "vhcsilvaa@gmail.com"
    }
  ],
  "license": "ISC",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "types": "./dist/src/index.d.ts",
  "bugs": {
    "url": "https://github.com/taikai/dappkit/issues"
  },
  "homepage": "https://github.com/taikai/dappkit#readme",
  "directories": {
    "doc": "docs",
    "test": "test"
  },
  "overrides": {
    "@truffle/events": "0.1.6",
    "@truffle/config": "1.3.29"
  }
}
